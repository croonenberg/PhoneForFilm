<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Basis App-thema -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Pas hier je applicatie-kleuren e.d. aan -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <!-- Jouw chat overlay -->
    <style name="ThemeOverlay.Chat" parent="ThemeOverlay.MaterialComponents.DayNight">
        <!-- Stel hier je chat-specifieke kleuren/attributen in -->
        <item name="colorPrimary">@color/chatPrimary</item>
        <item name="colorOnPrimary">@color/chatOnPrimary</item>
        <!-- Voeg meer toe naar smaak, bv. bubble-colors -->
    </style>
</resources>
