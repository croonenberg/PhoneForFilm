<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PhoneForFilm" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/greenroom_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/chat_background</item>
        <item name="toolbarStyle">@style/Widget.PhoneForFilm.Toolbar</item>
        <!-- Default MaterialAlertDialog theme (overlay) -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.DayNight.Dialog.Alert</item>

        <!-- Bubble background drawables -->
        <item name="bubbleSentBackground">@drawable/chat_bubble_sent</item>
        <item name="bubbleReceivedBackground">@drawable/chat_bubble_received</item>

        <!-- Bubble text colors -->
        <item name="colorBubbleSentText">@android:color/black</item>
        <item name="colorBubbleReceivedText">@android:color/black</item>
    </style>

</resources>