<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.PhoneForFilm" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/greenroom_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/chat_background</item>
        <item name="toolbarStyle">@style/Widget.PhoneForFilm.Toolbar</item>
        <!-- Default MaterialAlertDialog theme (overlay) -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.Material3.DayNight.Dialog.Alert</item>
    </style>

    <style name="Widget.PhoneForFilm.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.PhoneForFilm.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.PhoneForFilm.Toolbar.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
