<resources>

    <!-- Greenroom (WhatsApp-stijl) -->
    <style name="Theme.PhoneForFilm.Greenroom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/greenroom_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/greenroom_background</item>
    </style>

    <!-- Blue Stage (iMessage-stijl) -->
    <style name="Theme.PhoneForFilm.BlueStage" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/blue_stage_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/blue_stage_background</item>
    </style>

    <!-- Grey Card (SMS-stijl) -->
    <style name="Theme.PhoneForFilm.GreyCard" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/grey_card_primary</item>
        <item name="colorOnPrimary">@android:color/black</item>
        <item name="colorSurface">@color/grey_card_background</item>
    </style>

    <!-- Neutral Light (lichte stijl) -->
    <style name="Theme.PhoneForFilm.NeutralLight" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/neutral_light_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/neutral_light_background</item>
    </style>

    <!-- Darkroom (donkere stijl) -->
    <style name="Theme.PhoneForFilm.Darkroom" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/light_grey</item>
        <item name="colorPrimary">@color/darkroom_primary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSurface">@color/darkroom_background</item>
    </style>

    <!-- Default stijl, verwijst standaard naar Greenroom -->
    <style name="Theme.PhoneForFilm" parent="Theme.PhoneForFilm.Greenroom" />

</resources>
