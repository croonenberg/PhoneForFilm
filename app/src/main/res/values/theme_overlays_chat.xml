<resources>

    <!-- WhatsApp‑like -->
    <style name="ThemeOverlay_Chat_WhatsApp">
        <item name="colorBubbleSent">@color/greenroom_primary</item>
        <item name="colorBubbleSentText">@android:color/white</item>
        <item name="colorBubbleReceived">@color/chat_received_background</item>
        <item name="colorBubbleReceivedText">@android:color/black</item>
    </style>

    <!-- iMessage‑like -->
    <style name="ThemeOverlay_Chat_iMessage">
