
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- staart -->
    <item android:gravity="right|bottom">
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBubbleSent"/>
            <size android:width="8dp" android:height="8dp"/>
            <corners android:radius="0dp" android:bottomRightRadius="0dp" />
        </shape>
    </item>
    <!-- hoofd bubbel -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="?attr/colorBubbleSent"/>
            <corners android:radius="16dp" />
            <padding android:left="8dp" android:top="4dp" android:right="8dp" android:bottom="4dp"/>
        </shape>
    </item>
</layer-list>
