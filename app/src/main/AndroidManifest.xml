<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.phoneforfilm">

    <application
        android:name=".PhoneForFilmApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhoneForFilm">

        <activity
            android:name=".view.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ChatListActivity" />
        <activity android:name=".view.ChatActivity" />
        <activity android:name=".view.CallActivity" />
        <activity android:name=".view.IncomingCallActivity" />
        <activity android:name=".view.LanguageSelectionActivity" />
    </application>

</manifest>
