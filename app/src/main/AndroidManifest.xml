<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.phoneforfilm">

    <!-- Machtigingen (staan altijd buiten <application>) -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="PhoneForFilm"
        android:theme="@style/Theme.PhoneForFilm">

        <!-- Launcher-activity -->
        <activity
            android:name=".view.MainActivity"
            android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Overige schermen -->
        <activity android:name=".view.ChatListActivity" />
        <activity android:name=".view.ChatActivity" />

    </application>

</manifest>
