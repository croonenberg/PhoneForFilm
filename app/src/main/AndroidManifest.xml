<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".PhoneForFilmApp"
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhoneForFilm">

        <!-- Launcher activity -->
        <activity
            android:name=".view.ChatListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Other activities -->
        <activity android:name=".ui.chat.ChatActivity" android:exported="false" />
        <activity android:name=".ui.contact.ContactPickerActivity" android:exported="false" />
        <activity android:name=".view.IncomingCallActivity" android:exported="false" />
        <activity android:name=".view.CallActivity" android:exported="false" />
        <activity android:name=".view.LanguageSelectionActivity" android:exported="false" />
        <activity android:name=".view.ThemeSettingsActivity" android:exported="false" />

    </application>

</manifest>
