<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".PhoneForFilmApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PhoneForFilm">

        <activity android:name=".view.MainActivity"
            android:exported="true">
            <!-- Toegevoegd -->
            <activity android:name=".ui.contact.ContactPickerActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.BaseActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.CallActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.ChatListActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.ContactListActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.EditContactActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.IncomingCallActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.LanguageSelectionActivity"
                tools:ignore="WrongManifestParent" />
            <activity android:name=".view.ThemeSettingsActivity"
                tools:ignore="WrongManifestParent" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>